set -e

echo $(date +%s) start "$RSBACKUP_HOST" "$RSBACKUP_VOLUME" >> ${WORKSPACE}/wrap.log
sleep ${RSYNC_WRAP_DELAY:-0.1}
${RSYNC} "$@"
status=$?
echo $(date +%s) stop "$RSBACKUP_HOST" "$RSBACKUP_VOLUME" >> ${WORKSPACE}/wrap.log
exit $status
