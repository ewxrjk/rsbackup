set -e

#echo "Running hook..."
#env | grep ^RSBACKUP | sort

case "$RSBACKUP_HOOK" in
pre-backup-hook )
  if [ -e hookdata ]; then
    echo >&3 "ERROR: hookdata already exists"
    exit 1
  fi
  touch hookdata
  what=pre
  ;;
post-backup-hook )
  if [ ! -e hookdata ]; then
    echo >&3 "ERROR: hookdata does not exit"
    exit 1
  fi
  rm -f hookdata
  what=post
  if [ ! -z "${EXPECT_STATUS}" \
       -a "${RSBACKUP_STATUS}" != "${EXPECT_STATUS}" ]; then
    echo >&3 "ERROR: expected status '${EXPECT_STATUS}' got '${RSBACKUP_STATUS}'"
    exit 1
  fi
  ;;
pre-access-hook )
  if [ -e devhookdata ]; then
    echo >&3 "ERROR: devhookdata exists"
    exit 1
  fi
  touch devhookdata
  what=dev-pre
  ;;
post-access-hook )
  if [ ! -e devhookdata ]; then
    echo >&3 "ERROR: devhookdata does not exist"
    exit 1
  fi
  rm -f devhookdata
  what=dev-post
  ;;
* )
  echo >&3 "ERROR: unknown hook $RSBACKUP_HOOK"
  exit 1
  ;;
esac

if [ ! -z "${RUN}" ]; then
  touch ${RUN}-${what}.ran
  if ${RSBACKUP_ACT}; then
    touch ${RUN}-${what}.acted
  fi
fi
